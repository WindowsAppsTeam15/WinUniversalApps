<Page
    x:Class="YamAndRateApp.Views.AddEditRestaurantView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YamAndRateApp.Views"
    xmlns:viewModels="using:YamAndRateApp.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Style="{StaticResource PageStyle}">

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0"
                      VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <Grid Style="{StaticResource InputGridField}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                       Grid.Column="0"
                       Text="Name:"/>
                    <TextBox
                     Grid.Column="1"
                     PlaceholderText="Type name"
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                </Grid>
                <Grid Style="{StaticResource InputGridField}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                       Grid.Column="0"
                       Text="Description:"/>
                    <TextBox
                     Grid.Column="1"
                     PlaceholderText="Type short description"
                     Text="{Binding Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                </Grid>
                <Grid  Style="{StaticResource InputGridField}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                       Grid.Column="0" 
                       Text="Category:"/>
                    <ComboBox
                      Grid.Column="1"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Stretch"
                      Padding="10">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <!-- TODO: List categories -->
                                    <TextBlock Text="{Binding Category, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>
                <Grid  Style="{StaticResource InputGridField}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0" 
                        Text="Specialty:" />
                    <TextBox
                     Grid.Column="1"
                     PlaceholderText="Type specialty" />
                </Grid>
                
                <!--Replace the below with collection!!!-->
                <Grid  Style="{StaticResource InputGridField}"
                       Visibility="Collapsed"
                       x:Name="FirstHidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0" 
                        Text="Specialty:" />
                    <TextBox
                     Grid.Column="1"
                     PlaceholderText="Type specialty" />
                </Grid>
                <Grid  Style="{StaticResource InputGridField}"
                       Visibility="Collapsed"
                       x:Name="SecondHidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0" 
                        Text="Specialty:" />
                    <TextBox
                     Grid.Column="1"
                     PlaceholderText="Type specialty" />
                </Grid>
                <Grid  Style="{StaticResource InputGridField}"
                       Visibility="Collapsed"
                       x:Name="ThirdHidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0" 
                        Text="Specialty:" />
                    <TextBox
                     Grid.Column="1"
                     PlaceholderText="Type specialty" />
                </Grid>
                <Grid  Style="{StaticResource InputGridField}"
                       Visibility="Collapsed"
                       x:Name="ForthHidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0" 
                        Text="Specialty:" />
                    <TextBox
                     Grid.Column="1"
                     PlaceholderText="Type specialty" />
                </Grid>
                <Grid  Style="{StaticResource InputGridField}">
                    <Button Content="Add new specialty" Padding="15" Click="DisplayNewSpecialty"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                Content="Upload Photo" />
            <Button Grid.Column="1"
                Content="Save"
                    Command="{Binding SaveRestaurant}" />
        </Grid>
    </Grid>
</Page>
